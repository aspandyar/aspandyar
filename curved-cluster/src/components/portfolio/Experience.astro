---
import ExperienceItem from "./ExperienceItem.astro";
import Heading from "../ui/Heading.astro";
import { Icon } from "astro-icon/components";

const EXPERIENCE = [
  {
    date: "Dec. 2023 - Mar. 2024",
    title: "IT Intern",
    company: "FIRCaspian",
    description:
      "Developed a full-stack web application within the Dataiku platform to optimize the processing workflow of the Inventory Digital Management system. Collaborated with cross-functional teams to design efficient data pipelines and automated reporting, enhancing overall system performance and reliability.",
    location: "Astana, Kazakhstan"
  },
  {
    date: "Sep. 2024 - Present",
    title: "Programmer Engineer",
    company: "ITS Tech",
    description:
      "Responsible for server administration, system management, and monitoring solutions. Implemented automation scripts, managed cloud services, and optimized CI/CD pipelines to ensure smooth development and deployment processes. Focused on improving infrastructure reliability and operational efficiency.",
    location: "Astana, Kazakhstan"
  },
];
---

<section class="py-8 px-8 max-md:py-4 mb-4 scroll-m-16" id="experience">
  <div class="flex flex-col pt-8 max-w-4xl mx-auto">
    <div class="flex gap-4 items-center justify-center">
      <Icon class="text-3xl dark:text-white text-blacktext" name="briefcase" />
      <Heading text="Work" textGradient="Experience" level={2} />
    </div>

    <div class="relative max-md:mt-0 mt-8" aria-label="Professional experience">
      <ol class="relative mt-10">
        {
          EXPERIENCE.map((experience, index) => (
            <li>
              <article
                role="article"
                aria-labelledby={`experience-title-${index}`}
              >
                <div
                  class="flex flex-col gap-2  text-zinc-00 dark:text-zinc-300 md:col-span-3"
                  aria-describedby={`experience-title-${index}`}
                >
                  <ExperienceItem {...experience} />
                </div>
              </article>
            </li>
          ))
        }
      </ol>
    </div>
  </div>
</section>
